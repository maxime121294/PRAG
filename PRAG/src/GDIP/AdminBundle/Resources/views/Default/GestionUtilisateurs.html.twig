{% extends 'GDIPAdminBundle::layout.html.twig' %}

{% block admin_body %}
    <div class="container">
        <div class="row">
            <div class="span5">
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Adhérent</th>
                            <th>Contact</th>
                            <th>Rang</th>
                            <th>Date de réussite du concours</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="center">
                        {% for member in members %}
                            <tr>
                                <td>{{ member.nomMembre }}</td>
                                <td>{{ member.prenomMembre }}</td>
                                <td>{% if member.estAdherent %}Oui{% else %}Non{% endif %}</td>
                                <td>{{ member.email }}</td>
                                <td>{{ member.rangMembre }}</td>
                                <td>{{ member.DateReussiteMembre|date("d/m/Y") }}</td>
                                <td>
                                    <a href=""><i class="fa fa-trash-o fa-2x"></i></a>
                                    <a href=""><i class="fa fa-pencil-square-o fa-2x"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <p class="ajout-donnees">
                <a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-plus fa-2x plus"></i>AJOUTER UN MEMBRE</a>
            </p>
        </div>
    </div>
    <div class="container">
        <p class="ajout-donnees" align="right">
            <a href="#"><i class="fa fa-users fa-2x import"></i>IMPORTER LISTE</a>
        </p>
    </div>
{% endblock %}
