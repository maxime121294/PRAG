{% extends 'GDIPGDIPBundle::layout.html.twig' %}

{% block GDIP_body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12" style="margin-top: 1em">

                <span> Filière :  <div class="select-style"><select>
                        <option>Cochin</option>
                        <option>Pierre et Marie Curie</option>
                    </select></div></span>
                <br />
                <span class="pull-right"> <button class="btn red_button">Enregistrer l'évaluation</button></span>
                <table class="table table-striped table-condensed">
                    <thead>
                    <tr>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="eval-categ-question">Lieux de stages</td>
                    </tr>
                    <tr class="eval-question">
                        <td>Choix DES : <div class="select-style"><select>
                                <option>Cochin</option>
                                <option>Pierre et Marie Curie</option>
                            </select></div>
                        </td>
                    </tr>
                    <tr class="eval-question">
                        <td>Choix hôpital : <div class="select-style"><select>
                                <option>Cochin</option>
                                <option>Pierre et Marie Curie</option>
                            </select></div>
                        </td>
                    </tr>
                    <tr class="eval-question">
                        <td>Choix service :<div class="select-style"><select>
                                <option>Cochin</option>
                                <option>Pierre et Marie Curie</option>
                            </select></div></td>
                    </tr>


                    <tr>
                        <td class="eval-categ-question">Encadrement et formation</td>
                    </tr>
                    <tr class="eval-question">
                        <td>Fréquence des staffs :
                                  <input type = "radio"
                                         name = "radSize"
                                         id = "sizeSmall"
                                         value = "small"
                                         checked = "checked" />
                                  <label for = "sizeSmall">1 à 2 semaines</label>

                                  <input type = "radio"
                                         name = "radSize"
                                         id = "sizeMed"
                                         value = "medium" />
                                  <label for = "sizeMed">1 à 3 semaines</label>

                                  <input type = "radio"
                                         name = "radSize"
                                         id = "sizeLarge"
                                         value = "large" />
                                  <label for = "sizeLarge">Moins d'1 mois</label>

                                  <input type = "radio"
                                         name = "radSize"
                                         id = "sizeLarge"
                                         value = "large" />
                                  <label for = "sizeLarge">Jamais</label>
          </td>

                    </tr>

                    <tr>
                        <td class="eval-categ-question">Points fort du stage</td>
                    </tr>
                    <td>
                        <input type="text" class="input-border full-width" placeholder="Décrivez votre stage" aria-describedby="sizing-addon2">
                    </td>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        window.onload=function(){
            $('.selectpicker').selectpicker();
            $('.scrollMe .dropdown-menu').scrollyou();
            prettyPrint();
        };
    </script>
{% endblock %}
