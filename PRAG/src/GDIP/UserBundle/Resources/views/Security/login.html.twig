{% extends 'GDIPUserBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container" id="div-signin">
        <form class="form-signin" role="form" action="{{ path("fos_user_security_check") }}" method="post">

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <fieldset>
                <legend>Connexion</legend>
                <br />
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'utilisateur" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Mot de passe" />
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </label>
                </div>
            </fieldset>
            <br/>
            <a href="{{ path('fos_user_resetting_request') }}" class="pull-left grey-link">Mot de passe oubli√© ?</a><input type="submit" class="btn btn-sm pull-right" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" /><br><br>
        </form>
    </div>
{% endblock %}